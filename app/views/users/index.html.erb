<h1>Listado de usuarios</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>N° de Cédula</th>
    <th>Correo</th>
    <th>Teléfono local</th>
    <th>Teléfono celular</th>
    <th>Género</th>
    <th>Dirección</th>
    <th>Rol</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.id_number %></td>
    <td><%= user.email %></td>
    <td><%= user.phone_home %></td>
    <td><%= user.phone_mobile %></td>
    <td><%= user.gender %></td>
    <td><%= user.address %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Mostrar', user %></td>
    <td><%= link_to 'Editar', edit_user_path(user) %></td>
    <td><%= link_to 'Borrar', user, confirm:'¿Ésta seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

